<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="32dp"
    android:layout_height="32dp">

    <ImageView
        android:id="@+id/cell_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/cell_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/cell_image"
        android:layout_alignTop="@+id/cell_image"
        android:layout_alignRight="@+id/cell_image"
        android:layout_alignBottom="@+id/cell_image"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"/>

</RelativeLayout>